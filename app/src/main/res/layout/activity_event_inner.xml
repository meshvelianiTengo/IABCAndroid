<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_event_inner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="iabc.com.voli.iabcandroid.ui.EventInnerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >

        <ImageView
            android:id="@+id/act_event_inner_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:src="@mipmap/menu_back"
            />

        <iabc.com.voli.iabcandroid.ui.custom.CTextView
            android:id="@+id/act_event_inner_join"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/_727272"
            app:plusTextSize="@integer/plus_text_size_for_18"
            app:font_name="AVERNIR_NEXT"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/fr_event_inner"
            />
    </ScrollView>

</LinearLayout>
