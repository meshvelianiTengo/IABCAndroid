<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:background="@color/white"
    android:paddingRight="20dp">

    <iabc.com.voli.iabcandroid.ui.custom.CTextView
        android:id="@+id/contact_info_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:plusTextSize="@integer/plus_text_size_for_16"
        app:font_name="AVERNIR_NEXT"
        android:textColor="@color/black"
        android:text="@string/contact_info"
        />

    <iabc.com.voli.iabcandroid.ui.custom.AboutUsNameValuePair
        android:id="@+id/contact_info_layout_location"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <iabc.com.voli.iabcandroid.ui.custom.AboutUsNameValuePair
        android:id="@+id/contact_info_layout_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <iabc.com.voli.iabcandroid.ui.custom.AboutUsNameValuePair
        android:id="@+id/contact_info_layout_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>